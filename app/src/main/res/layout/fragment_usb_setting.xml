    <TextView
        android:text="Record Management: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <GridLayout
        android:background="@drawable/layout_border_shape"
        android:columnCount="5"
        android:rowCount="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_record_take_pic"
            android:text="TakePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_record_get_state"
            android:text="GetRecordState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/bt_record_start"
            android:text="StartRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/bt_record_stop"
            android:text="StopRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/bt_record_enable_mic"
            android:text="EnableMic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/bt_record_disable_mic"
            android:text="DisableMic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/bt_record_protected"
            android:text="ProtectRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </GridLayout>

    <TextView
        android:text="SDCard Management: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:background="@drawable/layout_border_shape"
