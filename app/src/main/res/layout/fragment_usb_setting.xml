              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >
    <TextView
        android:text="Device Management: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <GridLayout
        android:background="@drawable/layout_border_shape"
        android:rowCount="2"
        android:columnCount="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_native_start_preview"
            android:text="NativeStartPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_native_stop_preview"
            android:text="NativeStopPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_get_device_verison"
            android:text="GetVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_get_device_param"
            android:text="GetDeviceParams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_get_device_time"
            android:text="GetTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_set_device_time"
            android:text="SetTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_set_gsensor_sensitivity_high"
            android:text="SetGSensorHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_set_gsensor_sensitivity_medium"
            android:text="SetGSensorMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_set_gsensor_sensitivity_low"
            android:text="SetGSensorLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_reset_factory_default"
            android:text="ResetFactory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </GridLayout>
